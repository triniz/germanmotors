<div class="section-lg">
    <div class="container text-center">
        <div class="row">
            <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
                <div class="tab-content">
                  <!-- Login Tab content -->
                    <div class="tab-pane fade show active" id="tab-login">
                        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                        <%= devise_error_messages! %>
                        <%= f.hidden_field :reset_password_token %>
                            <div class="field">
                                <p class="text-left">Laisser vide si vous ne voulez pas le changer</p> 
                                <%= f.password_field :password, autocomplete: "new-password", placeholder: " Nouveau mot de passe " %>
                                <% if @minimum_password_length %>
                                  <br />
                                <% end %>
                            </div>

                            <div class="field">
                                <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirmation du mot de passe" %>
                            </div>

                            <%= f.button "Chnager mon mot de passe", class: "button button-lg button-border-1px button-fill-left-outline button-fullwidth" %>
                        <% end %>

                        <div class="margin-top-30">
                            <ul class="list-unstyled">
                                <li><%= render "devise/shared/links" %></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- end row -->
    </div><!-- end container -->
</div>

