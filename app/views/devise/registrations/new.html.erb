<div class="section-lg">
    <div class="container text-center">
        <div class="row">
            <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
                <div class="tab-content">
                  <!-- Login Tab content -->
                    <div class="tab-pane fade show active" id="tab-login">
                        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                            <%= devise_error_messages! %>
                            <div class="field">
                                <%= f.text_field :first_name, autofocus: true, placeholder: "Prénom",autocomplete: "first_name" %>
                            </div>
                            <div class="field">
                                <%= f.text_field :last_name, autofocus: true, placeholder: "Nom",autocomplete: "last_name" %>
                            </div>

                            <div class="field">
                                <%= f.email_field :email, autofocus: true, placeholder: "Émail",autocomplete: "email" %>
                            </div>

                            <div class="field">
                                <%= f.password_field :password, placeholder: "Mot de passe (6 caractères au minimum) ",autocomplete: "new-password" %>
                            </div>

                            <div class="field">
                                <%= f.password_field :password_confirmation, placeholder: "Confirmation du mot de passe", autocomplete: "new-password" %>
                            </div>

                            <%= f.button "Sign up", class: "button button-lg button-border-1px button-fill-left-outline button-fullwidth" %>
                        <% end %>

                        <div class="margin-top-30">
                            <ul class="list-unstyled">
                                <li><%= render "devise/shared/links" %></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- end row -->
    </div><!-- end container -->
</div>
